<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">aize_rma_rmarequest_listing.aize_rma_rmarequest_listing_data_source</item>
            <item name="deps" xsi:type="string">aize_rma_rmarequest_listing.aize_rma_rmarequest_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">rmarequest_columns</item>
    </argument>
    <settings>
        <buttons/>
        <spinner>rmarequest_columns</spinner>
        <deps>
            <dep>aize_rma_rmarequest_listing.aize_rma_rmarequest_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="aize_rma_rmarequest_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">aize_rma_rmarequest_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">entity_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">aize_rma_rmarequest_listing.aize_rma_rmarequest_listing.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current</item>
                    </item>
                    <item name="sizesConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">aize_rma_rmarequest_listing.aize_rma_rmarequest_listing.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current</item>
                    </item>
                    <item name="defaultSize" xsi:type="number">20</item>
                </item>
            </argument>
        </paging>
        <exportButton name="export_button"/>
        <massaction name="listing_massaction">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </massaction>
    </listingToolbar>
    <columns name="rmarequest_columns">
        <column name="entity_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">RMA</item>
                    <item name="sorting" xsi:type="string">asc</item>
                </item>
            </argument>
        </column>
        <column name="requested">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="label" xsi:type="string" translate="true">Requested</item>
                    <item name="dataType" xsi:type="string">date</item>
                </item>
            </argument>
        </column>
        <column name="authorized">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Authorized</item>
                </item>
            </argument>
        </column>
        <column name="actions" class="Aize\Rma\Ui\Component\Listing\Column\RmaRequestActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="indexField" xsi:type="string">entity_id</item>
                    <item name="label" xsi:type="string" translate="true">Actions</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/actions</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
